<!-- banner -->
<div class="banner-container">
  <div class="banner" style="background-image: url(<%= asset_path('banner_background_mountain.jpg') %>);">
    <div class="banner-contents-container">
      <h1>Rediscover Water</h1>
      <p>Find, log and rate waters from all over the world.</p>
      <%= render 'shared/search_form' %>
    </div>
  </div>
</div>

<div class="spacer-transparent">
</div>

<div class="container">
      <div class="mt-3" id="waters">
        <div class="row">
          <% @waters.each do |water| %>
            <div class="col-12 col-sm-6 col-md-4 mb-5 pl-0">
              <%= link_to water_path(water) do  %>
                <div class="card-bottle-tall">
                  <div class="card-bottle-tall-image-container">
                    <%= image_tag water.photo %>
                  </div>
                  <div class="card-bottle-info">
                    <div class="card-bottle-info-container">
                      <p><%= water.name %></p>
                      <p><%= water.brand %></p>
                      <p><%= water.source %></p>
                      <p><%= water.country %></p>
                      <p>PH:<%= water.ph %></p>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
  </div>

