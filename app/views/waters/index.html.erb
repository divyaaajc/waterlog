<div class="index-container">
  <div class="container">
    <div class="row justify-content-start mb-5 mt-3">
      <% if params.dig(:search, :query).present? %>
        <h1 class="mt-5">"<%= params.dig(:search, :query) %>"</h1>
      <% else %>
        <h1 class="mt-5"> All Waters </h1>
      <% end %>
    </div>
    <div class="mt-3" id="waters">
      <div class="row">
        <% @waters.each do |water| %>
          <div class="col-12 col-sm-6 col-md-4 mb-5 pl-0">
            <%= link_to water_path(water) do  %>
              <div class="card-bottle-tall relative-card">
                <% if water.highly_rated %>
                <p class="absolute-tag">Highly Rated</p>
                <% end %>
                <% if water.rare %>
                <p class="absolute-tag">Rare</p>
                <% end %>
                <% if water.popular %>
                <p class="absolute-tag">Popular</p>
                <% end %>
                <div class="card-bottle-tall-image-container">
                  <%= image_tag water.photo %>
                </div>
                <div class="card-bottle-info">
                  <div class="card-bottle-info-container">
                    <p><%= water.name %></p>
                    <p><%= water.brand %></p>
                    <p><%= water.source %></p>
                    <p><%= water.country %></p>
                    <p>PH:<%= water.ph %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        <% end %>
        <div class="pagination-div">
        <%= will_paginate @waters %>
        </div>
      </div>
    </div>
  </div>
</div>

